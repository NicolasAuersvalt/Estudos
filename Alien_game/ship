import pygame

class Ship:
    def __init__(self, screen):
        self.screen = screen
        self.image = pygame.image.load(r"C:\Users\nicol\Desktop\Alien_game\nave_1.bmp")
        # pygame.rect -> Indica as coordenadas do objeto (x, y), rect = retÃ¢ngulos
        self.rect = self.image.get_rect()
        self.screen_rect = screen.get_rect()
        self.rect.centerx= self.screen_rect.centerx # -> Centro do eixo x
        self.rect.bottom = self.screen_rect.bottom # Bottom -> Inferior

    def blitme(self):
        self.screen.blit(self.image, self.rect)
